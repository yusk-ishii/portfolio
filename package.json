    "destyle.css": "^4.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
